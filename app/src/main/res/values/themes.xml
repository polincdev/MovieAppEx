    <style name="Theme.NavDrawerApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavDrawerApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavDrawerApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>